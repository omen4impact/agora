{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Agora",
  "version": "0.3.0",
  "identifier": "app.agora.voice",
  "build": {
    "frontendDist": "ui"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Agora - P2P Voice Chat",
        "width": 900,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/icon.ico"
    ]
  }
}
