{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Agora",
  "version": "0.1.0",
  "identifier": "app.agora.voice",
  "build": {
    "frontendDist": "ui",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev --prefix ui",
    "beforeBuildCommand": "npm run build --prefix ui"
  },
  "app": {
    "windows": [
      {
        "title": "Agora - P2P Voice Chat",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/256x256.png"
    ]
  }
}
